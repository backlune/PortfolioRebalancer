<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:oxy="clr-namespace:OxyPlot.Avalonia;assembly=OxyPlot.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PortfolioRebalancer.App.Views.PortfolioView">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="0.1*" />
      <RowDefinition Height="0.3*" />
      <RowDefinition Height="0.6*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.5*" />
      <ColumnDefinition Width="0.5*" />
    </Grid.ColumnDefinitions>

    <Button Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Content="Save" Command="{Binding SavePortfolioCommand, Mode=TwoWay}" />
  
    <oxy:Plot Grid.Row="1" Grid.Column="0" Title="Asset balance" Width="400" Height="300" >
      <oxy:Plot.Series>
        <oxy:PieSeries 
            InnerDiameter="0.2"
            ExplodedDistance="0"
            Stroke="Black" StrokeThickness="1"
            StartAngle="0" AngleSpan="360"
            Items="{Binding Assets}"
            LabelField="Name" ValueField="ValueDomesticCurrency"  />
      </oxy:Plot.Series>
    </oxy:Plot>

    <oxy:Plot Grid.Row="1" Grid.Column="1" Title="Tag balance" Width="400" Height="300" >
      <oxy:Plot.Series>
        <oxy:PieSeries
            InnerDiameter="0.2"
            ExplodedDistance="0"
            Stroke="Black" StrokeThickness="1"
            StartAngle="0" AngleSpan="360"
            Items="{Binding AssetsByTag, Mode=TwoWay}"
            LabelField="Tag" ValueField="Value" />
      </oxy:Plot.Series>
    </oxy:Plot>
  
    
    <ListBox Grid.Row="2" Grid.ColumnSpan="2" Items="{Binding Assets}" ScrollViewer.VerticalScrollBarVisibility="Auto">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="60" />
              <ColumnDefinition Width="0.3*" />
              <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin="5 0 5 0" Text="{Binding Tag, Mode=TwoWay}" BorderBrush="LightBlue" Foreground="LightBlue" HorizontalAlignment="Left" />
            <TextBlock Grid.Column="1" Margin="5 0 5 0" Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    
    
  </Grid>
</UserControl>